<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:layout_width="389dp"
        android:layout_height="52dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/profile_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_lessons"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_lessons"
                android:layout_width="29dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/lessonplans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_profile"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_home"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="37dp"
                android:layout_height="27dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_lessons"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.BottomNavigationView>

    <EditText
        android:id="@+id/txt_searchhere"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="505dp"
        android:ems="10"
        android:hint="Search Here"
        android:inputType="textPersonName"
        android:text="Search Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchIcon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchIcon"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="504dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_searchhere"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrview_alllessons"
        android:layout_width="368dp"
        android:layout_height="488dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_searchhere">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="177dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView9"
                android:layout_width="350dp"
                android:layout_height="183dp"
                android:layout_margin="10dp"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                app:cardBackgroundColor="#468FF5"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView2"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintStart_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="325dp"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="Level 1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
                        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="334dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="140dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="258dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="369dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="350dp"
                android:layout_height="183dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#468FF5"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView10"
                app:layout_constraintEnd_toEndOf="@+id/cardView10"
                app:layout_constraintStart_toStartOf="@+id/cardView10"
                app:layout_constraintTop_toBottomOf="@+id/cardView9">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="325dp"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="Level 2"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
                        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="334dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="111dp"
                                android:layout_height="95dp"
                                tools:layout_editor_absoluteX="369dp"
                                tools:layout_editor_absoluteY="72dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="111dp"
                                android:layout_height="95dp"
                                tools:layout_editor_absoluteX="258dp"
                                tools:layout_editor_absoluteY="72dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="111dp"
                                android:layout_height="95dp"
                                tools:layout_editor_absoluteX="140dp"
                                tools:layout_editor_absoluteY="72dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="111dp"
                                android:layout_height="95dp"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="72dp"
                                tools:srcCompat="@tools:sample/avatars" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView10"
                android:layout_width="350dp"
                android:layout_height="183dp"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                app:cardBackgroundColor="#468FF5"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="325dp"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="Level 3"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
                        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="334dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="140dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="258dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="111dp"
                        android:layout_height="95dp"
                        tools:layout_editor_absoluteX="369dp"
                        tools:layout_editor_absoluteY="72dp"
                        tools:srcCompat="@tools:sample/avatars" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>